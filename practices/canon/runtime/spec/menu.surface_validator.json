{
  "$id": "potm.runtime.menu.surface_validator.v1",
  "title": "Entry Menu Surface Validator",
  "description": "Schema for validating that the surfaced entry menu matches the canonical adapter definition exactly.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "beacon": {
      "type": "string",
      "const": "⚑ Beacons active — clarity over fluency, dignity enforced."
    },
    "header": {
      "type": "string",
      "const": "[KERNEL_ENTRY] Menu"
    },
    "options": {
      "type": "array",
      "items": [
        { "const": "1. Card draw" },
        { "const": "2. Journal prompt" },
        { "const": "3. Zuihitsu fragment" },
        { "const": "4. Glyph: Describe intake" }
      ],
      "minItems": 4,
      "maxItems": 4
    },
    "post_selection_prompt": {
      "type": "string",
      "const": "Another? (Y)   Menu? (M)"
    }
  },
  "required": ["beacon", "header", "options", "post_selection_prompt"],
  "unevaluatedProperties": false
}
