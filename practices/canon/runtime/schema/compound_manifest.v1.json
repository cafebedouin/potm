{
  "$id": "potm.schema.compound_manifest.v1",
  "title": "Compound Lens Manifest",
  "description": "Schema for declaring a PoTM compound lens orchestration.",
  "type": "object",
  "required": ["id", "version", "signature", "components"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^compound\\.[a-z0-9_.-]+$",
      "description": "Stable compound identifier (e.g., compound.relational)."
    },
    "version": {
      "type": "string",
      "pattern": "^v?[0-9]+(\\.[0-9]+){0,2}(_[a-z0-9]+)?$",
      "description": "Semantic version of this compound manifest."
    },
    "display_title": {
      "type": "string",
      "description": "Human-facing title for practitioners."
    },
    "author": {
      "type": "string",
      "default": "practitioner"
    },
    "license": {
      "type": "string",
      "default": "CC0-1.0"
    },

    "signature": {
      "type": "object",
      "required": ["move_graph"],
      "properties": {
        "move_graph": {
          "type": "object",
          "required": ["order"],
          "properties": {
            "order": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "description": "Step identifier, must match a component id."
              }
            }
          }
        }
      }
    },

    "components": {
      "type": "object",
      "required": ["lenses"],
      "properties": {
        "lenses": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["id", "lens_id", "payload_schema_ref"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z0-9_.-]+$",
                "description": "Local step id (e.g., define1, checkA)."
              },
              "lens_id": {
                "type": "string",
                "pattern": "^lens\\.(define|check|trace|refuse)$",
                "description": "Kernel-safe lens this step maps to."
              },
              "payload_schema_ref": {
                "type": "string",
                "description": "Relative path to the schema for this stepâ€™s payload."
              },
              "summary": {
                "type": "string",
                "description": "Optional description of the step."
              }
            }
          }
        }
      }
    },

    "schemas": {
      "type": "array",
      "description": "Optional local schemas for compound-only payload shaping.",
      "items": {
        "type": "object",
        "required": ["id", "schema_ref"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Identifier for this schema (referenced in components)."
          },
          "schema_ref": {
            "type": "string",
            "description": "Relative path to the schema file."
          }
        }
      }
    }
  },
  "additionalProperties": false
}
